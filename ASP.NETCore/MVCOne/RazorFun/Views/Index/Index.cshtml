<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Razor Fun</title>
</head>
<body>
    <h1>Here are some Delicious Foods!</h1>
@{
    var foods = new string[]
    {
        "Apple Pie",
        "Burritos",
        "Clams Casino",
        "Donuts",
        "Commie Pie",
        "Sheep"
    };

    foreach(string food in foods)
    {
        string  str = food.Substring(0,1); 
        <div class="food">
            @if(str.ToLower() == "c")
            {
                <p style="color: red;">@food</p>
            }
            else
            {
                <p>@food</p>
            }
        </div>
    }
}
</body>
</html>