@model Wedding
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Add A Wedding";
}

<div class="d-flex justify-content-between">
    <h1>Plan Your Wedding!</h1>
    <span>
        <a asp-controller="User" asp-action="Dashboard" class="btn btn-outline-info text-dark mt-3">Dashboard</a>
        <a asp-controller="User" asp-action="Logout" class="btn btn-outline-info text-dark mt-3">Log Out</a>
    </span>
</div>



<form asp-action="AddWedding" asp-controller="Wedding" method="post" class="form-group">
    <input type="hidden" asp-for="UserID" value="@ViewBag.UserID">
    <label asp-for="WedderOne" class="form-label"></label>
    <span asp-validation-for="WedderOne"></span>
    <input asp-for="WedderOne" class="form-control">
    <label asp-for="WedderTwo" class="form-label"></label>
    <span asp-validation-for="WedderTwo"></span>
    <input asp-for="WedderTwo" class="form-control">
    <label asp-for="WeddingDate" class="form-label"></label>
    <span asp-validation-for="WeddingDate"></span>
    <input asp-for="WeddingDate" class="form-control">
    <label asp-for="Address" class="form-label"></label>
    <span asp-validation-for="Address"></span>
    <input asp-for="Address" class="form-control">
    <button type="submit" class="btn btn-outline-info text-dark mt-3">Create</button>
</form>