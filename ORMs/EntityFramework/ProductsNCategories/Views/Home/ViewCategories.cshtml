@model Category
@{
    ViewData["Title"] = "Categories";
}

<h1 class="text-center"><a asp-controller="Home" asp-action="ViewProducts">Products</a> | Categories</h1>
<div class="text-center d-flex justify-content-evenly">
    <div class="leftcol flex-1">
        <h1>New Category</h1>
        <form class="form-group" asp-controller="Home" asp-action="SubmitCategory" method="post">
            <label class="form-label" asp-for="CategoryName"></label>
            <span asp-validation-for="CategoryName"></span>
            <input class="form-control" asp-for="CategoryName">
            <button type="submit" class="btn btn-info">Create</button>
        </form>
    </div>
    <div class="col2">
        <h1 class="text-center">Existing Categories</h1>
        <ul class="list-group">
        @{
            @foreach(var one in ViewBag.CatList)
            {
                <li class="list-item"><a href="/view/category/@one.CategoryId">@one.CategoryName</a></li>
            }
        }
        </ul>
    </div>
</div>