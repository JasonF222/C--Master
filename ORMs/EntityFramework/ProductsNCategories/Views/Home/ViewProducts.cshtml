@model Product
@{
    ViewData["Title"] = " Products";
}

    <h1 class="text-center">Products | <a asp-controller="Home" asp-action="ViewCategories">Categories</a></h1>
<div class="main d-flex justify-content-evenly">
    <div class="col1">
        <h2 class="text-center">New Product</h2>
            <form asp-action="SubmitProduct" asp-controller="Home" method="post" class="form-group">
                <label class="form-label" asp-for="ProductName"></label>
                <span asp-validation-for="ProductName"></span>
                <input class="form-group" asp-for="ProductName">
                <label class="form-control" asp-for="ProductDescription"></label>
                <span asp-validation-for="ProductDescription"></span>
                <textarea class="form-control" asp-for= "ProductDescription" cols="30" rows="10"></textarea>
                <label class="form-label" asp-for="ProductPrice"></label>
                <span asp-validation-for="ProductPrice"></span>
                <input class="form-control" asp-for="ProductPrice">
                <button class="btn btn-info">Create</button>
            </form>
    </div>
    <div class="col2">
        <h2 class="text-center">Existing Products</h2>
        <ul class="list-group">
            @{
                @foreach(var one in ViewBag.ProdList)
                {
                    <li class="list-item"><a href="/view/product/@one.ProductId">@one.ProductName</a></li>
                }
            }
        </ul>
    </div>
</div>
